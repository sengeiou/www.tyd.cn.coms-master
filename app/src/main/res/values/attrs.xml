<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>
    <declare-styleable name="scanview">
        <!-- 渐变圆view的宽度 -->
        <attr name="GradientCircleView_width" format="dimension" />
        <!-- 渐变圆view的高度 -->
        <attr name="GradientCircleView_hight" format="dimension" />
        <!-- 刻度圆view的宽度 -->
        <attr name="CalibrationView_width" format="dimension" />
        <!-- 刻度圆view的高度 -->
        <attr name="CalibrationView_hight" format="dimension" />
        <!-- 外圈圆view的宽度 -->
        <attr name="OutCircleView_width" format="dimension" />
        <!-- 外圈圆view的高度 -->
        <attr name="OutCircleView_hight" format="dimension" />
        <!-- 内圈上下扫描圆view的宽度 -->
        <attr name="InnerCircleView_width" format="dimension" />
        <!-- 内圈上下扫描圆view的高度 -->
        <attr name="InnerCircleView_hight" format="dimension" />
        <!-- 渐变圆view中心圆半径 -->
        <attr name="GradientCircleView_center_circle_radius_size" format="dimension" />
        <!-- 刻度圆view中心圆半径 -->
        <attr name="CalibrationView_radius_size" format="dimension" />
        <!--  外圈圆view中心圆半径 -->
        <attr name="OutCircleView_radius_size" format="dimension" />
        <!-- 内圈上下扫描圆view中心圆半径 -->
        <attr name="InnerCircleView_radius_size" format="dimension" />
    </declare-styleable>
</resources>
