<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardBackgroundColor="#4dfefefe"
    card_view:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/CardLinearLayout"
        android:background="@drawable/yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/cardviewicon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX银行"
                android:textColor="#ffffff"
                android:textSize="16sp" />

                <TextView
                    android:textStyle="italic"
                    android:typeface="monospace"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快捷支付"
                    android:textColor="#4dfefefe"
                    android:textSize="10sp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/itcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX卡"
                android:textColor="#ffffff"
                android:textSize="16sp" />
<!--
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </LinearLayout>-->
            <TextView
                android:layout_below="@+id/itcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****         ****        **** "
                android:textColor="#4dfefefe"
                android:textSize="15sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="65dp"
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="1234"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/banklog_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icbcbanklog" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>