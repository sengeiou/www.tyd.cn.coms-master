<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.touedian.com.facetyd.model.BankCardActivity">
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="105.5dp"
        android:background="#25b5ff" />

    <ImageView
        android:id="@+id/bankcard_back"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/allbackbutton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="添加银行卡"
        android:textColor="@color/white"
        android:textSize="16sp" />




        <ImageView
            android:layout_below="@+id/textView2"
            android:background="@mipmap/bankcar_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />
        <ImageView
            android:id="@+id/bankcard_carme"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/bankcard_yinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:textColor="#888888"
        android:textSize="12.5sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:text="识结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:text="卡种"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Bankcard_type"
            android:textSize="13sp"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:text="******"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#888888"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <RelativeLayout
    android:layout_marginTop="17dp"
    android:layout_marginLeft="20dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="13sp"
        android:text="卡名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Bankcard_name"
        android:textSize="13sp"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:text="******"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#888888"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:text="卡号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Bankcard_number"
            android:textSize="13sp"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:text="******"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#888888"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <Button
        android:id="@+id/Bankcard_btn"
        android:background="@mipmap/bank_btn"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
